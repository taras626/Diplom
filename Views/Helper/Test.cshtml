@using TsukanovaDesign.Models
@model Question
@{
}
<section class="test">
    <div class="container">
        <h2>@Model.questionTxt</h2>
        <hr />

        @for (int i = 0; i < Model.answers.Length; i++)
        {
            <input type="radio" name="Answ" value="@i" />@Model.answers[i]
        }
        <form action="@(Model.id - 1==0 ? "/Helper" : $"/Helper/{Model.id - 1}")" method="@(Model.id - 1==0 ? "get" : "post")">
            <input type="submit" name="Prev" value="Предыдущий" />
        </form>
        <form action="/Helper/@(Model.id + 1)" method="post">
            <input type="submit" name="Next" value="Следующий" />
        </form>
    </div>
</section>